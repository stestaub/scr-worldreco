<div class="container">
  <div class="row">
    <div class="col-sm-12">
        <h2>Passwort Ã¤ndern</h2>

        <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", label: "Neues Passwort" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", label: "Passwort wiederholen" %>
          <%= f.submit "Change my password" %>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>