<div class="container">
  <div class="row">
    <div class="col-sm-12">
        <h2>Passwort vergessen?</h2>

        <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal) do |f| %>
          <%= devise_error_messages! %>
          <%= f.email_field :email, autofocus: true, label: "Deine Mail-Adresse" %>
          <%= f.submit "Neues Passwort an obige Mail-Adresse erhalten" %>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
