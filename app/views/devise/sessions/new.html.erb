<div class="container">
  <div class="row">
    <div class="col-sm-12">
        <h2>Login</h2>
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal) do |f| %>
          <%= f.alert_message "Bitte überprüfe deine Login Daten.", error_summary: false %>
          <%= f.email_field :email, autofocus: true, label: "Email" %>
            <%= f.password_field :password, autocomplete: "off", label: "Passwort" %>


            <%= f.form_group :actions do %>
              <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me, label: "Angemeldet bleiben" %>
              <% end -%>
                <%= f.submit "Login" %>
            <% end %>

        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

