<div class="container">
  <div class="row">
    <div class="col-sm-12">
        <h2>Log in</h2>

        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal) do |f| %>
            <%= f.email_field :email, autofocus: true %>
            <%= f.password_field :password, autocomplete: "off" %>


            <%= f.form_group :actions do %>
              <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
              <% end -%>
                <%= f.submit "Log in" %>
            <% end %>

        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

